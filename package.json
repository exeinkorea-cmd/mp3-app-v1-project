{
  "name": "mp3-app-v1-project",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "//--- 설치 스크립트 (각 패키지별 독립 설치) ---//": "",
    "install:all": "npm install -w @mp3/common ; npm install -w functions ; npm install -w web-cms ; npm install -w mobiles",
    "install:common": "npm install -w @mp3/common",
    "install:functions": "npm install -w functions",
    "install:web": "npm install -w web-cms",
    "install:mobile": "npm install -w mobiles",
    "//--- 1인 개발(나 혼자 해내야해)을 위한 '마스터 컨트롤' 스크립트 ---//": "",
    "//-- '도시 표준 연구소(common)' 제어 --//": "",
    "build:common": "npm run build -w @mp3/common",
    "watch:common": "npm run build -w @mp3/common -- --watch",
    "//-- 각 구역(Package) 실행 (원격 제어) --//": "",
    "start:web": "npm run start -w web-cms",
    "start:mobile": "npm run start -w mobiles",
    "//-- [수정!] '--host' 플래그를 '제거'합니다! (firebase.json이 대신 처리) --//": "",
    "serve:functions": "npm run build -w functions && npx firebase emulators:start --only functions,firestore",
    "//-- CMS 웹 앱 빌드 및 배포 --//": "",
    "build:web": "npm run build -w web-cms",
    "deploy:hosting": "npm run build:web && npx firebase deploy --only hosting",
    "//-- GCF(번역 엔진) 배포 --//": "",
    "deploy:functions": "npm run build -w functions && npx firebase deploy --only functions",
    "//-- 모든 서비스 한 번에 배포! --//": "",
    "deploy:all": "npm run deploy:hosting && npm run deploy:functions"
  },
  "private": true,
  "workspaces": [
    "packages/common",
    "packages/functions",
    "packages/web-cms",
    "packages/mobiles"
  ],
  "devDependencies": {
    "firebase-tools": "^13.0.0"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native-renderer": "19.1.0",
    "expo": {
      "react": "19.1.0"
    },
    "react-native": {
      "react": "19.1.0"
    }
  }
}
