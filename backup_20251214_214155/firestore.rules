rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // [규칙!] 'departments'(소속명) 컬렉션은 누구나 읽을 수 있습니다 (로그인 전에도 필요)
    match /departments/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // [규칙!] 'settings'(현장 설정) 컬렉션은 누구나 읽을 수 있습니다 (로그인 전에도 필요)
    match /settings/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // [규칙!] 'bulletins'(공지)와 'checkIns'(출석부) 컬렉션은
    // '로그인한 사용자(auth != null)'만 '읽고 쓸' 수 있습니다.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}